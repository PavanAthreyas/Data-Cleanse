<mvc:View controllerName="cg.pbs.org.DemoRefine.controller.Detail" 
    xmlns:html="http://www.w3.org/1999/xhtml" 
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" 
    xmlns="sap.m"
    xmlns:table="sap.ui.table" 
    xmlns:f="sap.f" 
    xmlns:layout="sap.ui.layout" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:core="sap.ui.core" 
    xmlns:chart="sap.chart" 
    xmlns:data="sap.chart.data">
    <Page title="File Summary">
        <content>
            <layout:BlockLayout background="Default" visible="true">
                <layout:content>
                    <layout:BlockLayoutRow scrollable="false">
                        <layout:content>
                            <layout:BlockLayoutCell width="2" titleAlignment="Begin" titleLevel="H5">
                                <layout:content>
                                    <HeaderContainer id="container2">
                                        <TileContent frameType="TwoByOne" footer="Invalid Fields">
                                            <content>
                                                <NumericContent value="{globalModel>/overview/invalidpercent}" icon="sap-icon://validate" valueColor="Warning" indicator="None" />
                                            </content>
                                        </TileContent>
                                        <TileContent frameType="TwoByOne" footer="Duplicates Records">
                                            <content>
                                                <NumericContent value="{globalModel>/overview/duplicatePercent}" icon="sap-icon://duplicate" valueColor="Warning" indicator="None" press="press"/>
                                            </content>
                                        </TileContent>
                                    </HeaderContainer>
                                    <!-- <Button text="Upload to Analyze" icon="sap-icon://upload" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/> -->
                                </layout:content>
                            </layout:BlockLayoutCell>
                        </layout:content>
                    </layout:BlockLayoutRow>
                    <layout:BlockLayoutRow scrollable="false">
                        <layout:content>
                            <layout:BlockLayoutCell width="4" title="Validate By Feild" titleAlignment="Begin" titleLevel="Auto">
                                <layout:content>
                                    <Label class="sapUiSmallMarginTop sapUiTinyMarginEnd" text="Filter by City" />
                                    <ComboBox items="{globalModel>/detailReportCitySummary/data}" selectionChange="handleCityChanged">
                                        <core:Item key="{globalModel>city}" text="{globalModel>city}" />
                                    </ComboBox>
                                </layout:content>
                            </layout:BlockLayoutCell>
                        </layout:content>
                    </layout:BlockLayoutRow>
                    <layout:BlockLayoutRow scrollable="false">
                        <layout:content>
                            <layout:BlockLayoutCell width="3" titleAlignment="Begin" titleLevel="H6">
                                <layout:content>
                                    <Panel expandable="true" id="idEmailIDPanel" expanded="false" visible="true" headerText="By Email" width="auto" class="">
                                        <content>
                                             <table:Table id="idEmailTable" selectionMode="Single" selectionBehavior="Row" rows="{globalModel>/fileData}" rowSelectionChange="handleEmailSelectionRowChanged"  visibleRowCount="10" filter="email" ariaLabelledBy="title">
                                              <table:columns>
                                                    <table:Column width="auto" filterProperty="recordId">
                                                        <Label text="Record Number" />
                                                        <table:template>
                                                            <Text text="{globalModel>recordId}" wrapping="false" />
                                                        </table:template>
                                                    </table:Column>
                                                    <table:Column width="auto" filterProperty="firstName" defaultFilterOperator="StartsWith">
                                                        <Label text="Name" />
                                                        <table:template>
                                                        <HBox>
                                                            <Text text="{globalModel>firstName}" class="sapUiTinyMarginEnd" wrapping="false" />
                                                            <Text text="{globalModel>lastName}" wrapping="false" />
                                                        </HBox>
                                                        </table:template>
                                                    </table:Column>
                                                     <table:Column width="auto" filterProperty="companyName" defaultFilterOperator="StartsWith">
                                                        <Label text="Company" />
                                                        <table:template>
                                                            <Text text="{globalModel>companyName}" class="sapUiTinyMarginEnd" wrapping="false" />
                                                        </table:template>
                                                    </table:Column>
                                                    <table:Column width="auto">
                                                        <Label text="Email" />
                                                        <table:template>
                                                             <Text text="{globalModel>email}" wrapping="false" />
                                                        </table:template>
                                                    </table:Column>
                                                    <!-- <Column id="availability" width="9rem" filterProperty="Available" showFilterMenuEntry="false" defaultFilterOperator="EQ" filterType="sap.ui.model.type.Boolean">
                                                        <Label text="Status" />
                                                        <template>
                                                            <ObjectStatus text="{Status}" state="{path: 'Available',formatter: '.formatAvailableToObjectState'}"/>
                                                        </template>
                                                    </Column> -->
                                              <!--         <Column id="price" width="9rem" filterProperty="Price">
                                                        <m:Label text="Price" />
                                                        <template>
                                                            <u:Currency value="{Price}" currency="{CurrencyCode}"/>
                                                        </template>
                                                    </Column>
                                                    <Column width="6rem" hAlign="End" filterProperty="Quantity" filterType="sap.ui.model.type.Integer">
                                                        <m:Label text="Quantity" />
                                                        <template>
                                                            <m:Label text="{path: 'Quantity',type: 'sap.ui.model.type.Integer'}" />
                                                        </template>
                                                    </Column> -->
                                                </table:columns> 
                                                <table:footer>
                                                    <Toolbar>
                                                        <ToolbarSpacer/>
                                                        <Button icon="sap-icon://hint" tooltip="Show information" press="showInfo"/>
                                                    </Toolbar>
                                                </table:footer> 
                                            </table:Table> 
                                        </content>
                                    </Panel>
                                </layout:content>
                            </layout:BlockLayoutCell>
                        </layout:content>
                    </layout:BlockLayoutRow>
                    <layout:BlockLayoutRow scrollable="false">
                        <layout:content>
                            <layout:BlockLayoutCell width="3" titleAlignment="Begin" titleLevel="H6">
                                <layout:content>
                                    <Panel expandable="true" id="idAddressPanel" expanded="false" visible="true" headerText="By Address" width="auto" class="">
                                        <content>
                                             <table:Table id="idAddressTable" selectionMode="Single" rows="{globalModel>/fileData}" visibleRowCount="10" filter="email" ariaLabelledBy="title">
                                              <table:columns>
                                                    <table:Column width="110px" filterProperty="recordId">
                                                        <Label text="Record Number" />
                                                        <table:template>
                                                            <Text text="{globalModel>recordId}" wrapping="false" />
                                                        </table:template>
                                                    </table:Column>
                                                    <table:Column width="150px" filterProperty="firstName" defaultFilterOperator="StartsWith">
                                                        <Label text="Name" />
                                                        <table:template>
                                                        <HBox>
                                                            <Text text="{globalModel>firstName}" class="sapUiTinyMarginEnd" wrapping="false" />
                                                            <Text text="{globalModel>lastName}" wrapping="false" />
                                                        </HBox>
                                                        </table:template>
                                                    </table:Column>
                                                     <table:Column width="150px" filterProperty="companyName" defaultFilterOperator="StartsWith">
                                                        <Label text="Name" />
                                                        <table:template>
                                                            <Text text="{globalModel>companyName}" class="sapUiTinyMarginEnd" wrapping="false" />
                                                        </table:template>
                                                    </table:Column>
                                                    <table:Column width="auto">
                                                        <Label text="Address" />
                                                        <table:template>
                                                        <VBox>
                                                         <HBox>
                                                             <Text text="{globalModel>houseNumber}" class="sapUiTinyMarginEnd" wrapping="false" />
                                                             <Text text="{globalModel>addressLine1}" wrapping="false" />
                                                        </HBox>
                                                             <Text text="{globalModel>addressLine2}" wrapping="false" />
                                                             <Text text="{globalModel>postalCode}" wrapping="false" />
                                                        </VBox>
                                                        </table:template>
                                                    </table:Column>
                                                    <table:Column width="110px">
                                                        <Label text="Country" />
                                                        <table:template>
                                                             <Text text="{globalModel>country}" wrapping="false" />
                                                        </table:template>
                                                    </table:Column>
                                                    <!-- <Column id="availability" width="9rem" filterProperty="Available" showFilterMenuEntry="false" defaultFilterOperator="EQ" filterType="sap.ui.model.type.Boolean">
                                                        <Label text="Status" />
                                                        <template>
                                                            <ObjectStatus text="{Status}" state="{path: 'Available',formatter: '.formatAvailableToObjectState'}"/>
                                                        </template>
                                                    </Column> -->
                                              <!--         <Column id="price" width="9rem" filterProperty="Price">
                                                        <m:Label text="Price" />
                                                        <template>
                                                            <u:Currency value="{Price}" currency="{CurrencyCode}"/>
                                                        </template>
                                                    </Column>
                                                    <Column width="6rem" hAlign="End" filterProperty="Quantity" filterType="sap.ui.model.type.Integer">
                                                        <m:Label text="Quantity" />
                                                        <template>
                                                            <m:Label text="{path: 'Quantity',type: 'sap.ui.model.type.Integer'}" />
                                                        </template>
                                                    </Column> -->
                                                </table:columns> 
                                                <table:footer>
                                                    <Toolbar>
                                                        <ToolbarSpacer/>
                                                        <Button icon="sap-icon://hint" tooltip="Show information" press="showInfo"/>
                                                    </Toolbar>
                                                </table:footer> 
                                            </table:Table> 
                                        </content>
                                    </Panel>
                                </layout:content>
                            </layout:BlockLayoutCell>
                        </layout:content>
                    </layout:BlockLayoutRow>
                </layout:content>
            </layout:BlockLayout>
        </content>
    </Page>
</mvc:View>